@model LoginVM
<!-- Begin Main Content Area -->
<main class="main-content">
    <partial name="_TitlePartialView" model='"Login"'></partial>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <form method="post" >
                        <div class="login-form">
                            <h4 class="login-title">Login</h4>
                            <div class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger">  </div>
                                <div class="col-lg-12">
                                    <label asp-for="Email">Email Address*</label>
                                    <input asp-for="Email" placeholder="Email Address" />
                                </div>
                                <div class="col-lg-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password" />
                                </div>
                                <div class="col-md-8">
                                    <div class="check-box">
                                        <input asp-for="RememberMe" type="checkbox" id="remember_me" />
                                        <label asp-for="RememberMe">Remember me</label>
                                    </div>
                                </div>
                                <div class="col-md-4 pt-1 mt-md-0">
                                    <div class="forgotton-password_info">
                                        <a href="#"> Forgotten pasward?</a>
                                    </div>
                                </div>
                                <div class="col-lg-12 pt-5">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Login
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->